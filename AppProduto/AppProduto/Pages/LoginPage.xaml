<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProduto.Pages.LoginPage"
             Title="Login">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False"/>
    </Shell.BackButtonBehavior>

    <FlexLayout JustifyContent="Center" AlignItems="Center" BackgroundColor="WhiteSmoke">
        <VerticalStackLayout Padding="40" FlexLayout.Grow="1">
            <Label Text="Login"/>
            <Entry x:Name="loginNome" Placeholder="Digite seu login"/>

            <Label Text="Senha" Margin="0,15,0,0"/>
            <Entry x:Name="loginSenha" Placeholder="Digite sua senha" IsPassword="True" />

            <Button x:Name="btnLogin" Text="Entrar" Clicked="OnLogin" Margin="0,15,0,0"/>
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>